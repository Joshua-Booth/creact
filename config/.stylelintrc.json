{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "theme",
          "layer",
          "screen",
          "import",
          "reference"
        ]
      }
    ],
    "color-hex-length": "long",
    "string-quotes": "double",
    "property-no-vendor-prefix": null,
    "value-no-vendor-prefix": null
  }
}
