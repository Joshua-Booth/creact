{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": "..",
    "paths": {
      "@/storybook/*": ["./.storybook/*"]
    }
  },
  "include": [
    "./*.ts",
    "./*.js",
    "./.*.js",
    "../*.config.ts",
    "../.storybook/main.ts",
    "../.storybook/vite.config.ts",
    "../.storybook/vitest.config.ts"
  ]
}
