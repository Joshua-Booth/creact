# Devcontainer Environment Variables
# Copy this file to devcontainer.env.local and customize as needed

# Node Environment
NODE_ENV=development

# Port Configuration
VITE_PORT=8080
VITE_API_PORT=8000

# Full API URL
VITE_API_ROOT_URL=http://localhost:8000

# Public URL for the frontend
VITE_PUBLIC_URL=http://localhost:8080/public

# Sentry Configuration (optional - leave blank to disable)
VITE_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# PostHog Configuration (optional - leave blank to disable)
VITE_POSTHOG_KEY=
VITE_POSTHOG_HOST=https://app.posthog.com

# Playwright Configuration (for E2E tests)
# These are used by Playwright test runner
CI=
