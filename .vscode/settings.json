{
  "prettier.configPath": "./config/.prettierrc",
  "prettier.ignorePath": "./config/.prettierignore",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,
  "editor.guides.bracketPairs": "active",
  "editor.wordBasedSuggestions": "off",
  "editor.suggest.insertMode": "replace",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.quickSuggestions": {
    "comments": false,
    "strings": true,
    "other": true
  },
  "eslint.options": {
    "overrideConfigFile": "./config/eslint.config.ts"
  },
  "eslint.useFlatConfig": true,
  "eslint.run": "onSave",
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.github": true,
    "**/.husky": true,
    "**/.netlify": true,
    "**/.playwright-cli": true,
    "**/.playwright-mcp": true,
    "**/.react-router": true,
    "**/.storybook": true,
    "**/.vscode": true,
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/playwright-report": true,
    "**/storybook-static": true,
    "**/test-results": true,
    "**/tmp": true,
    "**/.env.example": true,
    "**/.eslintcache": true,
    "**/.gitignore": true,
    "**/.mcp.json": true,
    "**/*.local.*": true,
    "**/CHANGELOG.md": true,
    "**/components.json": true,
    "**/debug-storybook.log": true,
    "**/dependency-graph.svg": true,
    "**/LICENSE": true,
    "**/mise.toml": true,
    "**/netlify.toml": true,
    "**/pnpm-lock.yaml": true,
    "**/pnpm-workspace.yaml": true,
    "vite.config.ts": true,
    "tsconfig.json": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/.react-router/**": true
  },
  "search.exclude": {
    "**/dist": true,
    "**/coverage": true,
    "**/.react-router": true,
    "**/playwright-report": true,
    "**/test-results": true,
    "**/storybook-static": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.autoImportFileExcludePatterns": [
    "react-router-dom",
    "react-day-picker"
  ],
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "tailwindCSS.validate": true,
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/*.md",
    "**/docs/**/*.md"
  ],
  "tailwindCSS.lint.cssConflict": "ignore",
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "css.validate": false,
  "css.lint.duplicateProperties": "ignore",
  "css.lint.propertyIgnoredDueToDisplay": "ignore",
  "git.blame.ignoreWhitespace": true,
  "explorer.compactFolders": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.revealIfOpen": true,
  "testing.automaticallyOpenPeekView": "never",
  "vitest.rootConfig": "./vitest.config.ts",
  "terminal.integrated.shellIntegration.enabled": false,
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "cSpell.import": [
    "./config/cspell.json"
  ],
  "explorerExclude.backup": {}
}
